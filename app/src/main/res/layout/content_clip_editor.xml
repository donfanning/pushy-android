<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="text"
      type="android.arch.lifecycle.MutableLiveData&lt;String&gt;" />

    <variable
      name="addMode"
      type="boolean" />
  </data>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.clips.ClipEditorActvity"
    tools:showIn="@layout/activity_clip_editor">

    <EditText
      android:id="@+id/clip_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@{safeUnbox(addMode) ? @string/clip_add_text : @string/clip_edit_text}"
      android:inputType="textMultiLine"
      android:selectAllOnFocus="false"
      android:text="@={text}"
      android:textAppearance="?attr/textAppearanceListItem"

      />

  </ScrollView>

</layout>
