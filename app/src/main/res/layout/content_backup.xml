<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:bind="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.text.TextUtils" />

    <variable
      name="vm"
      type="com.weebly.opus1269.clipman.viewmodel.BackupsViewModel" />

    <variable
      name="isWorking"
      type="android.arch.lifecycle.LiveData&lt;Boolean&gt;" />

    <variable
      name="infoMessage"
      type="android.arch.lifecycle.LiveData&lt;String&gt;" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.backup.BackupActivity"
    tools:showIn="@layout/activity_backup">

    <include
      layout="@layout/progress_layout"
      bind:isWorking="@{isWorking}" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      app:visibleGone="@{!safeUnbox(isWorking)}">

      <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:visibleGone="@{TextUtils.isEmpty(infoMessage)}"
        tools:listitem="@layout/backup_row"

        />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:text="@{infoMessage}"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:visibleGone="@{!TextUtils.isEmpty(infoMessage)}"
        tools:text="Error message here" />
    </LinearLayout>

  </LinearLayout>

</layout>
