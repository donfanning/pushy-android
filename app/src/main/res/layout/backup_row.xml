<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  <import type="android.view.View"/>
  <import type="com.weebly.opus1269.clipman.app.AppUtils"/>
  <variable
    name="vm"
    type="com.weebly.opus1269.clipman.viewmodel.BackupViewModel" />
  <variable
    name="handlers"
    type="com.weebly.opus1269.clipman.ui.backup.BackupHandlers" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:maxLines="1"
      android:text="@string/this_device"
      android:textAppearance="?attr/textAppearanceListItem"
      android:textIsSelectable="false"
      app:visibleGone="@{safeUnbox(vm.backupEntity.getMine)}"
      />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/activity_vertical_margin"
      android:layout_marginEnd="@dimen/activity_horizontal_margin"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/row_image_large_size"
        android:layout_marginRight="@dimen/row_image_large_size"
        android:orientation="vertical">

        <ImageButton
          android:id="@+id/restoreButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/activity_vertical_margin"
          android:onClick="@{() -> handlers.onRestoreClick(context, vm.backupEntity)}"
          android:background="@android:color/transparent"
          android:contentDescription="@string/backup_restore"
          app:tintAccent="@{true}"
          app:srcCompat="@drawable/ic_cloud_download" />

        <ImageButton
          android:id="@+id/syncButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/activity_vertical_margin"
          android:onClick="@{() -> handlers.onSyncClick(context, vm.backupEntity)}"
          android:background="@android:color/transparent"
          android:contentDescription="@string/backup_sync"
          app:tintAccent="@{true}"
          app:srcCompat="@drawable/ic_cloud_sync" />

        <ImageButton
          android:id="@+id/deleteButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:onClick="@{() -> handlers.onDeleteClick(context, vm.backupEntity)}"
          android:background="@android:color/transparent"
          android:contentDescription="@string/backup_delete"
          app:tintAccent="@{true}"
          app:srcCompat="@drawable/ic_delete_black_24dp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="2"
          android:textAppearance="?attr/textAppearanceListItem"
          android:textIsSelectable="false"
          android:text="@{@string/backup_nickname_fmt(vm.backupEntity.nickname)}"
          tools:text="Nickname: " />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="2"
          android:textAppearance="?attr/textAppearanceListItem"
          android:textIsSelectable="false"
          android:text="@{@string/backup_model_fmt(vm.backupEntity.model)}"
          tools:text="Model: " />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="2"
          android:textAppearance="?attr/textAppearanceListItem"
          android:textIsSelectable="false"
          android:text="@{@string/backup_SN_fmt(vm.backupEntity.SN)}"
          tools:text="SN: " />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="2"
          android:textAppearance="?attr/textAppearanceListItem"
          android:textIsSelectable="false"
          android:text="@{@string/backup_OS_fmt(vm.backupEntity.OS)}"
          tools:text="OS: " />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="2"
          android:text="@{@string/backup_date_fmt(AppUtils.getRelativeDisplayTime(context, vm.backupEntity.date))}"
          android:textAppearance="?attr/textAppearanceListItemSmall"
          android:textColor="?android:textColorTertiary"
          android:textIsSelectable="false"
          tools:text="Last Seen: yesterday" />


      </LinearLayout>

    </LinearLayout>

    <View style="@style/Divider" />

  </LinearLayout>

</layout>
